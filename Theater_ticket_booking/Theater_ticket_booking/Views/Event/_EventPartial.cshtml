<script>
    $(document).ready(function () {
        flatpickr('.calendars', {
            enableTime: true,
            dateFormat: "d.m.Y",
            "locale": "ru"
        });

        InitEvent();
    });

    function InitEvent() {
        var date = document.getElementById("date").value;

        $.ajax({
            url: '@Url.Action("GetShotEvent", "Event")',
            type: 'GET',
            async: false,
            data: { date: date},
            success: function (result) {
                FillEvent(result);
            },
            complete: function () {
            }
        });
    }

    function FillEvent(events) {
        $("#Events").empty();

        events.forEach(function (item, i, arr) {
            $('#Events').append('<div class="col mb-4">' +
                '<div class="card shadow" >' +
                '<img src="' + item.photo + '"' +
                'class="card-img-top" >' +
                '<div class="card-body" style="text-align:center">' +
                '<h3 class="card-title" >' + item.name + '</h3>' +
                '<p class="card-text">' +
                item.miniDescription + 
                '</p>' +
                '<div class="card-body">' +
                '<div class="btn-group mr-2" role="group" aria-label="First group" style="margin:2px">' +
                '<button type="button" style="background: #1a1b28; color: white;" class="btn btn-light">18:30</button>' +
                '</div>' +
                '<div class="btn-group mr-2" role="group" aria-label="First group" style="margin:2px">' +
                '<button type="button" style="background: #1a1b28; color: white;" class="btn btn-light">21:10</button>' +
                '</div>' +
                '</div>' +
                '</div>' +
                '</div>' +
                '</div>');
        });
    }

</script>